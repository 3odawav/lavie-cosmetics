{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    transition: all 0.3s ease;
    background-color: {{ block.settings.header_bg_color }};
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 16px;
  }

  @media (min-width: 640px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 24px;
    }
  }

  @media (min-width: 1024px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 32px;
    }
  }

  .ai-header-inner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: {{ block.settings.header_height }}px;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: none;
    align-items: center;
    gap: 32px;
    width: 33.333%;
  }

  @media (min-width: 768px) {
    .ai-header-nav-{{ ai_gen_id }} {
      display: flex;
    }
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_text_color }};
    transition: color 0.3s ease;
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: {{ block.settings.nav_font_weight }};
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_hover_color }};
  }

  .ai-header-logo-wrapper-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    justify-content: center;
    width: 33.333%;
  }

  .ai-header-logo-link-{{ ai_gen_id }} {
    display: inline-block;
    line-height: 0;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-header-logo-text-{{ ai_gen_id }} {
    color: {{ block.settings.logo_text_color }};
    font-size: {{ block.settings.logo_text_size }}px;
    font-weight: {{ block.settings.logo_text_weight }};
    text-decoration: none;
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 12px;
    width: 33.333%;
  }

  @media (min-width: 768px) {
    .ai-header-actions-{{ ai_gen_id }} {
      gap: 16px;
    }
  }

  .ai-header-action-btn-{{ ai_gen_id }} {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ block.settings.icon_color }};
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-header-action-btn-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-header-action-btn-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }} {
    display: block;
  }

  @media (min-width: 768px) {
    .ai-header-mobile-menu-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<header class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <div class="ai-header-inner-{{ ai_gen_id }}">
      <nav class="ai-header-nav-{{ ai_gen_id }}">
        {% if block.settings.nav_link_1_url != blank and block.settings.nav_link_1_text != blank %}
          <a class="ai-header-nav-link-{{ ai_gen_id }}" href="{{ block.settings.nav_link_1_url }}">
            {{ block.settings.nav_link_1_text }}
          </a>
        {% endif %}
        {% if block.settings.nav_link_2_url != blank and block.settings.nav_link_2_text != blank %}
          <a class="ai-header-nav-link-{{ ai_gen_id }}" href="{{ block.settings.nav_link_2_url }}">
            {{ block.settings.nav_link_2_text }}
          </a>
        {% endif %}
        {% if block.settings.nav_link_3_url != blank and block.settings.nav_link_3_text != blank %}
          <a class="ai-header-nav-link-{{ ai_gen_id }}" href="{{ block.settings.nav_link_3_url }}">
            {{ block.settings.nav_link_3_text }}
          </a>
        {% endif %}
        {% if block.settings.nav_link_4_url != blank and block.settings.nav_link_4_text != blank %}
          <a class="ai-header-nav-link-{{ ai_gen_id }}" href="{{ block.settings.nav_link_4_url }}">
            {{ block.settings.nav_link_4_text }}
          </a>
        {% endif %}
      </nav>

      <div class="ai-header-logo-wrapper-{{ ai_gen_id }}">
        {% if block.settings.logo_link != blank %}
          <a href="{{ block.settings.logo_link }}" class="ai-header-logo-link-{{ ai_gen_id }}">
            {% if block.settings.logo != blank %}
              <img
                src="{{ block.settings.logo | image_url: width: 400 }}"
                alt="{{ shop.name }}"
                class="ai-header-logo-{{ ai_gen_id }}"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}"
                loading="lazy"
              >
            {% elsif block.settings.logo_text != blank %}
              <span class="ai-header-logo-text-{{ ai_gen_id }}">{{ block.settings.logo_text }}</span>
            {% else %}
              <span class="ai-header-logo-text-{{ ai_gen_id }}">{{ shop.name }}</span>
            {% endif %}
          </a>
        {% endif %}
      </div>

      <div class="ai-header-actions-{{ ai_gen_id }}">
        {% if block.settings.show_search %}
          <button class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Search">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        {% endif %}

        {% if block.settings.show_account %}
          <a href="/account" class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Account">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </a>
        {% endif %}

        {% if block.settings.show_cart %}
          <a href="/cart" class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Cart">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </a>
        {% endif %}

        <button class="ai-header-action-btn-{{ ai_gen_id }} ai-header-mobile-menu-{{ ai_gen_id }}" aria-label="Menu">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

