    },
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "text",
      "id": "text_1",
      "label": "Text 1",
      "default": "BRAZILIAN FORMULA"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text 2",
      "default": "SULFATE-FREE"
    },
    {
      "type": "text",
      "id": "text_3",
      "label": "Text 3",
      "default": "PROFESSIONAL QUALITY"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Text size",
      "default": 20
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "s",
      "label": "Scroll speed",
