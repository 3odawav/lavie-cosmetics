{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-strip-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-strip-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-video-strip-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-video-strip-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .ai-video-strip-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-video-strip-scroll-wrapper-{{ ai_gen_id }} {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
  }

  .ai-video-strip-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-video-strip-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-video-strip-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-video-strip-grid-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    padding-bottom: 16px;
  }

  .ai-video-strip-card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-video-strip-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-video-strip-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 177.78%;
    background-color: #f5f5f5;
    overflow: hidden;
  }

  .ai-video-strip-video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-strip-video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-video-strip-video-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-video-strip-card-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-video-strip-product-image-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 12px;
    background-color: #f5f5f5;
  }

  .ai-video-strip-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-strip-product-name-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.product_name_color }};
    margin: 0 0 8px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-video-strip-product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.product_price_color }};
    margin-bottom: 16px;
    font-weight: 500;
  }

  .ai-video-strip-cta-button-{{ ai_gen_id }} {
    display: inline-block;
    width: 100%;
    padding: 12px 20px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-align: center;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .ai-video-strip-cta-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: scale(1.02);
  }

  .ai-video-strip-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
