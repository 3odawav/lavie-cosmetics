<shoppable-video-strip-{{ ai_gen_id }} class="ai-video-strip-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-strip-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-video-strip-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-video-strip-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-video-strip-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_content = false %}
    {% for i in (1..6) %}
      {% assign video_key = 'video_' | append: i %}
      {% assign product_key = 'product_' | append: i %}
      {% if block.settings[video_key] != blank or block.settings[product_key] != blank %}
        {% assign has_content = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_content %}
      <div class="ai-video-strip-scroll-wrapper-{{ ai_gen_id }}">
        <div class="ai-video-strip-grid-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% assign video_key = 'video_' | append: i %}
            {% assign poster_key = 'poster_' | append: i %}
            {% assign product_key = 'product_' | append: i %}
            {% assign video = block.settings[video_key] %}
            {% assign poster = block.settings[poster_key] %}
            {% assign product = block.settings[product_key] %}

            {% if video != blank or product != blank %}
              <div class="ai-video-strip-card-{{ ai_gen_id }}">
                <div class="ai-video-strip-video-wrapper-{{ ai_gen_id }}">
                  {% if video != blank %}
                    <video
                      class="ai-video-strip-video-{{ ai_gen_id }}"
                      loop
                      muted
                      playsinline
                      {% if poster != blank %}
                        poster="{{ poster | image_url: width: 600 }}"
                      {% endif %}
                    >
                      {% for source in video.sources %}
                        <source src="{{ source.url }}" type="{{ source.mime_type }}">
                      {% endfor %}
                    </video>
                  {% else %}
                    <div class="ai-video-strip-video-placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>

                <div class="ai-video-strip-card-content-{{ ai_gen_id }}">
                  {% if product != blank %}
                    {% if product.featured_image %}
                      <div class="ai-video-strip-product-image-{{ ai_gen_id }}">
                        <img
                          src="{{ product.featured_image | image_url: width: 120 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          loading="lazy"
                          width="60"
                          height="60"
                        >
                      </div>
                    {% endif %}

                    <h3 class="ai-video-strip-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>

                    <div class="ai-video-strip-product-price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </div>

                    <a
                      href="{{ product.url }}"
                      class="ai-video-strip-cta-button-{{ ai_gen_id }}"
                    >
                      {{ block.settings.button_text }}
                    </a>
                  {% else %}
                    <div class="ai-video-strip-product-image-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                    <h3 class="ai-video-strip-product-name-{{ ai_gen_id }}">Product name</h3>
                    <div class="ai-video-strip-product-price-{{ ai_gen_id }}">$0.00</div>
                    <button class="ai-video-strip-cta-button-{{ ai_gen_id }}" disabled>
                      {{ block.settings.button_text }}
                    </button>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="ai-video-strip-empty-state-{{ ai_gen_id }}">
        Add videos and products to get started
      </div>
    {% endif %}
  </div>
</shoppable-video-strip-{{ ai_gen_id }}>

<script>
  (function() {
    class ShoppableVideoStrip{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.videos = [];
      }

      connectedCallback() {
        this.initVideos();
        this.setupIntersectionObserver();
      }

      initVideos() {
        this.videos = this.querySelectorAll('.ai-video-strip-video-{{ ai_gen_id }}');
        
        this.videos.forEach((video) => {
          const card = video.closest('.ai-video-strip-card-{{ ai_gen_id }}');
          
          card.addEventListener('mouseenter', () => {
            video.play().catch(() => {});
          });
          
          card.addEventListener('mouseleave', () => {
            video.pause();
            video.currentTime = 0;
          });
        });
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            const video = entry.target;
            if (!entry.isIntersecting) {
              video.pause();
              video.currentTime = 0;
            }
          });
        }, options);

        this.videos.forEach((video) => {
          observer.observe(video);
        });
      }
    }

    customElements.define('shoppable-video-strip-{{ ai_gen_id }}', ShoppableVideoStrip{{ ai_gen_id }});
  })();
</script>

