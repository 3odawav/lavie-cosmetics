{% comment %}
  About Us Page - English Version
{% endcomment %}

<div class="about-us-section py-20">
  <div class="container mx-auto px-4">
    
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-6xl caveat-heading mb-6">
        {{ section.settings.heading }}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        {{ section.settings.subheading }}
      </p>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-20">
      <div>
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | image_url: width: 800 }}" 
            alt="{{ section.settings.heading }}"
            class="rounded-lg shadow-2xl"
          />
        {% else %}
          <div class="bg-gray-200 dark:bg-zinc-800 rounded-lg h-96"></div>
        {% endif %}
      </div>
      
      <div class="prose dark:prose-invert max-w-none">
        {{ section.settings.content }}
      </div>
    </div>

    <!-- Stats Section -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center mb-20">
      {% for block in section.blocks %}
        {% if block.type == 'stat' %}
          <div {{ block.shopify_attributes }}>
            <div class="text-4xl md:text-5xl font-bold text-brand-pink dark:text-brand-gold mb-2">
              {{ block.settings.number }}
            </div>
            <div class="text-sm uppercase tracking-wide text-gray-600 dark:text-gray-400">
              {{ block.settings.label }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Why Choose Us -->
    <div class="bg-gray-50 dark:bg-zinc-900 rounded-2xl p-12">
      <h2 class="text-3xl font-serif text-center mb-12">Why Choose La Vie?</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-pink dark:bg-brand-gold rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">ðŸ‡§ðŸ‡·</span>
          </div>
          <h3 class="font-serif text-xl mb-2">Authentic Brazilian</h3>
          <p class="text-gray-600 dark:text-gray-400">Direct from Brazil's finest manufacturers</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-pink dark:bg-brand-gold rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">âœ¨</span>
          </div>
          <h3 class="font-serif text-xl mb-2">Salon Quality</h3>
          <p class="text-gray-600 dark:text-gray-400">Professional-grade formulas</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-pink dark:bg-brand-gold rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">ðŸŒ¿</span>
          </div>
          <h3 class="font-serif text-xl mb-2">Natural Ingredients</h3>
          <p class="text-gray-600 dark:text-gray-400">Cruelty-free & paraben-free</p>
        </div>
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "About Us (EN)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About La Vie Cosmetics"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Official Distributor of Brazilian Professional Hair Care in Egypt"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>La Vie Cosmetics is the official and exclusive distributor of La Vie Professional Brazil in Egypt...</p>"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "1000+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Happy Clients"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us (EN)"
    }
  ]
}
{% endschema %}
