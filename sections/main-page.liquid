<div classname="bg-white text-brand-green-dark dark:bg-black dark:text-gray-300">
  <main>
    <section classname="relative h-[50vh] bg-black text-white flex items-center justify-center text-center pt-20">
      {% if section.settings.image_1 != blank %}
        {{ section.settings.image_1 | image_url: width: section.settings.image_1.width, height: section.settings.image_1.height | image_tag: alt: section.settings.image_1.alt, loading: 'lazy' }}
      {% endif %}
      <div classname="relative z-10 px-4">
        {% if section.settings.heading_1 != blank %}
          <h1 classname="text-4xl md:text-6xl font-serif caveat-heading text-brand-pink dark:text-brand-gold">{{ section.settings.heading_1 }}</h1>
        {% endif %}
        {% if section.settings.paragraph_1 != blank %}
          <p classname="mt-4 text-lg text-gray-300 max-w-2xl mx-auto">{{ section.settings.paragraph_1 }}</p>
        {% endif %}
      </div>
    </section>
    <section classname="py-20">
      <div classname="container mx-auto px-4 max-w-4xl">
        <div classname="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <div classname="text-center md:text-left">
            {% if section.settings.heading_2 != blank %}
              <h2 classname="text-4xl md:text-5xl mb-6 caveat-heading text-brand-pink dark:text-brand-gold">{{ section.settings.heading_2 }}</h2>
            {% endif %}
            <div classname="space-y-4 text-gray-700 dark:text-gray-400 leading-relaxed">
              {% if section.settings.paragraph_2 != blank %}
                <p>{{ section.settings.paragraph_2 }}</p>
              {% endif %}
              {% if section.settings.paragraph_3 != blank %}
                <p>{{ section.settings.paragraph_3 }}</p>
              {% endif %}
            </div>
          </div>
          <div classname="aspect-square relative rounded-lg overflow-hidden shadow-lg">
            {% if section.settings.image_2 != blank %}
              {{ section.settings.image_2 | image_url: width: section.settings.image_2.width, height: section.settings.image_2.height | image_tag: alt: section.settings.image_2.alt, loading: 'lazy' }}
            {% endif %}
          </div>
        </div>
      </div>
    </section>
    <section classname="py-20 bg-[#f9f9f9] dark:bg-zinc-900">
      <div classname="container mx-auto px-4 max-w-4xl text-center">
        <div classname="inline-flex items-center justify-center w-24 h-24 bg-brand-pink/10 rounded-full mb-6 text-brand-pink dark:bg-brand-gold/10 dark:text-brand-gold">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokewidth="{1.5}" stroke="currentColor" classname="w-12 h-12">
            <path strokelinecap="round" strokelinejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z"></path>
          </svg>
        </div>
        {% if section.settings.heading_3 != blank %}
          <h2 classname="text-4xl md:text-5xl mb-4 caveat-heading text-brand-pink dark:text-brand-gold">{{ section.settings.heading_3 }}</h2>
        {% endif %}
        {% if section.settings.paragraph_4 != blank %}
          <p classname="max-w-2xl mx-auto text-gray-600 dark:text-gray-400 leading-relaxed mb-8">{{ section.settings.paragraph_4 }}</p>
        {% endif %}
        {% if section.settings.content_1 != blank %}
          <button variant="default" size="lg" classname="bg-brand-pink text-white dark:bg-brand-gold dark:text-black hover:opacity-90 transition-colors shadow-lg shadow-black/20 hover:shadow-xl">{{ section.settings.content_1 }}</button>
        {% endif %}
      </div>
    </section>
  </main>
</div>