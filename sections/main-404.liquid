{% comment %}
  App Embed Section - For third-party app integrations
{% endcomment %}

<div class="apps-section">
  {% for block in section.blocks %}
    <div {{ block.shopify_attributes }}>
      {{ block.settings.html }}
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Apps",
  "blocks": [
    {
      "type": "app",
      "name": "App Block"
    }
  ]
}
{% endschema %}
